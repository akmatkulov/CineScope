<p style="color: green"><%= notice %></p>
<div class="col-lg-8 mx-auto">
  <h1>Movies</h1>
  <%= link_to "New movie", new_movie_path, class: "btn btn-primary btn-lg mb-3"%>
  <div id="movies">
    <% @movies.each do |movie| %>
    <div class="card shadow mb-3">
      <div class="card-body">
        <%= render movie %>
        <p>
          <%= link_to "Show this movie", movie %>
        </p>
      </div>
    </div>
    <% end %>
  </div>
</div>

