<p style="color: green"><%= notice %></p>

<div class="col-lg-8">
  <div class="card shadow">
    <div class="card-body">
      <%= render @movie %>
    </div>
  </div>
  <div class="btn-group mt-3" role="group" aria-label="Basic mixed styles example">

    <%= link_to "Edit this movie", edit_movie_path(@movie), class: "btn btn-danger" %>
    <%= link_to "Back to movies", movies_path, class: "btn btn-info" %>
    <%= button_to "Destroy this movie", @movie, method: :delete, class: "btn btn-warning"%>
  </div>

</div>





